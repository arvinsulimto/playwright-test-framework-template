{
  "name": "playwright-test-framework-template",
  "version": "1.0.0",
  "description": "Playwright test framework with Cucumber",
  "scripts": {
    "test": "cucumber-js; npm run report:generate --silent; echo \"\nRun 'npm run report:open' to view report\"",
    "clean": "rimraf reports/",
    "test:ci": "cucumber-js; status=$?; npm run report:generate --silent; exit $status",
    "test:headed": "HEADLESS=false cucumber-js; npm run report:generate --silent; echo \"\nRun 'npm run report:open' to view report\"",
    "test:parallel": "cucumber-js --parallel 2",
    "test:tags": "cucumber-js --tags",
    "test:debug": "PWDEBUG=1 cucumber-js",
    "test:watch": "nodemon --watch src -e feature,ts --exec cucumber-js",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:regression": "cucumber-js --tags @regression",
    "test:login": "cucumber-js --tags @login",
    "test:failed": "cucumber-js --format rerun:@rerun.txt && cucumber-js @rerun.txt",
    "report:generate": "allure generate reports/allure-results --clean -o reports/allure-report",
    "report:open": "allure open reports/allure-report",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/ features/",
    "postinstall": "playwright install chromium"
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.51.1",
    "@types/node": "^20.17.30",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.5",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "nodemon": "^3.1.9",
    "prettier": "^3.8.1",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.56.0"
  },
  "main": "cucumber.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
